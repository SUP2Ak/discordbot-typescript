{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@constructor": ["./src/constructor.ts"],
      "@events": ["./src/events/*"],
      "@commands": ["./src/commands/*"],
      "@types": ["./src/typings/*"],
      "@utils": ["./src/utils/*"],
      "@handlers": ["./src/handlers/*"]
    }
  },
  "include": ["src", "assets/**/*.json"],
  "exclude": ["node_modules", "dist"]
}